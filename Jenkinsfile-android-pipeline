pipeline {
   agent any
    stages {
        stage('Build') {
            steps {
                sh './gradlew assembleDebug'
            }
        }
        stage('Test') {
            steps {
                sh './gradlew test'
            }
        }
        
        stage('Sign') {
            steps {
                sh './sign-apk.sh'
            }
        }
        
        stage('Deploy') {
            steps {
                sh './deploy-to-app-store.sh'
            }
        }        
    }
    post {
        success {
            archiveArtifacts artifacts: 'app/build/outputs/apk/debug/*.apk', fingerprint: true
        }
    }
}




